<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mini_project.mapper.UserMapper">
    <!-- User 테이블 가져오기 -->
    <select id="getUserList" resultType="com.example.mini_project.vo.UserVo">
        SELECT *
        FROM T_MEMBER_LINK
    </select>

    <!-- 회원가입 -->
    <insert id="insertUser">
        INSERT INTO T_MEMBER_LINK
            (id, name, username, email, password, address, phone)
        VALUES
            (#{id}, #{name}, #{username}, #{email}, #{password}, #{address}, #{phone})
    </insert>

    <!-- 회원 정보 가져오기 -->
    <select id="getUserByEmail" resultType="com.example.mini_project.vo.UserVo">
        SELECT *
        FROM T_MEMBER_LINK
        WHERE id = #{email}
    </select>

    <select id="getUserById" resultType="com.example.mini_project.vo.UserVo">
        SELECT *
        FROM T_MEMBER_LINK
        WHERE id = #{id}
    </select>

    <!-- 회원정보 수정 -->
    <update id="updateUser">
        UPDATE T_MEMBER_LINK
        SET name = #{name},
            username = #{username},
            email = #{email},
            password = #{password},
            address = #{address},
            phone = #{phone}
        WHERE id = #{id}
    </update>

    <!-- 탈퇴 -->
    <delete id="deleteUser">
        DELETE
        FROM T_MEMBER_LINK
        WHERE id = #{id}
    </delete>
</mapper>
