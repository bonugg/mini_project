<!doctype html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>유져검색</title>
    <link rel="icon" href="/images/favicon.ico">
    <link rel="stylesheet" type="text/css" href="/css/search_style.css">
</head>
<script src='https://code.jquery.com/jquery-3.3.1.min.js'></script>
<body>
{{>header/header}}
<div id="fullscreen">
    <div id="subscreen">
        <div id="screen1">
            <div id="screen1-1">
                <div class="grid-container">
                    {{#userList}}
                        <div class="item">
                            <table onclick="showUserList('{{no}}')" class="user_table">
                                <tr>
                                    <td class="img_td"><img src="{{picture}}" alt="유저 프로필 이미지" class="img_list"/></td>
                                    <td class="username_td_1">{{username}}</td>
                                </tr>
                            </table>
                        </div>
                    {{/userList}}
                </div>
            </div>
        </div>
    </div>
</div>
<script src="js/main.js"></script>
</body>
</html>