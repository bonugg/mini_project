<!--    </security:authentication-manager>-->
    <beans:bean id="userDeniedHandler" class="com.mini_project.security.UserDeniedHandler"></beans:bean>
    <authentication-manager>
        <authentication-provider ref="userAuthProvider"></authentication-provider>
        <authentication-provider user-service-ref="userService"></authentication-provider>
    </authentication-manager>

    <beans:bean id="userService" class="com.mini_project.service.CustomUserDetailsService"/>
    <beans:bean id="userAuthProvider" class="com.mini_project.security.CustomAuthenticationProvider"/>

</beans:beans>